<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
	<class name="Tarea" table="tarea">
		<meta attribute="class-description">
			Tabla de la clase tarea
		</meta>
		<id name="id" type="long" column="id_tarea">
			<generator class="increment"/>
		</id>
                <discriminator column="tipo_tarea" type="string">
                <property name="fecha">
                <property name="descripcion">
                <property name="completa">
                <subclass name="Traduccion" extends="Tarea" discriminator-value="T">
                    <property name="texto">
                    <many-to-one name="parrafo" class="Parrafo" column="id_parrafo" cascade="all">
                    <many-to-one name="idioma" class="Idioma" column="id_idioma" cascade="all">
                </subclass>
                <subclass name="Evaluacion" extends="Tarea" discriminator-value="E">
                    <many-to-one name="traduccion" class="Traduccion" column="id_traduccion" cascade="all">
                </subclass>
	</class>     
</hibernate-mapping>